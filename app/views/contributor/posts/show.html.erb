<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover table-inverse">
        <tr>
          <th class="post-th">タイトル</th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th class="post-th">ジャンル</th>
          <td><%= @genres.find_by(id: @post.post_genre_id).name %></td>
        </tr>
        <tr>
          <th class="post-th">内容</th>
          <td><%= @post.content %></td>
        </tr>
        <tr>
          <th class="post-th">画像</th>
          <td><%= attachment_image_tag @post, :post_image, :fill, 125, 125, format: 'jpg',fallback: "noImage.jpg", size:'125x125' %></td>
        </tr>
        <tr>
          <th class="post-th">ステータス</th>
          <td><%= @post.status %></td>
        </tr>
        <tr>
          <th class="post-th">対象地域</th>
          <td><%= @post.prefecture %></td>
        </tr>
        <tr>
          <th class="post-th">ストック中のユーザー数</th>
          <td><%= @post.favorites.count %>人</td>
        </tr>
        <tr>
          <th class="post-th">リクエスト中のユーザー数</th>
          <td><%= @post.requests.count %>人</td>
        </tr>
        <tr>
          <td><%= link_to '編集', edit_contributor_post_path %></td>
        </tr>
      </table>
      </div>
    <div class="col-md-3 offset-md-1">
      <div>
        <div>
        <% @recipients.each do |recipient| %>
          <div>
            <%= recipient.name %>
          </div>
          <div>
            <%= recipient.organization_name %>
          </div>
          <div>
            <% if @post.created_rooms?(recipient) %>
              <%= link_to 'チャットルームへ', room_path(@post.rooms.find_by(recipient_id: recipient.id)) %>
            <% else %>
              <%= form_with model: @room, url: rooms_path, method: :post, local: true do |f| %>
                <%= f.hidden_field :post_id, value: @post.id %>
                <%= f.hidden_field :recipient_id, value: recipient.id %>
                <%= f.submit 'チャットルームを作る' %>
              <% end %>
            <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
