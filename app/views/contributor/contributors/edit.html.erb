<div class="container">
  <div class ="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @contributor, url: contributor_contributors_path, method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :nickname %><br>
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :organization_name %><br>
          <%= f.text_field :organization_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :organization_url %><br>
          <%= f.text_field :organization_url, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image %>
          <%= attachment_image_tag @contributor, :profile_image, :fill, 100, 100, format: 'jpg' %><br>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit '変更' ,class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
