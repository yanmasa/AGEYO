<%= form_with model: @contact do |f| %>
  <div>
    <%= f.label :name, 'お名前*' %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= f.label :organization_name, '団体名*' %>
    <%= f.text_field :organization_name %>
  </div>

  <div>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :phone_number, '電話番号' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :subject, '件名' %>
    <%= f.select :subject, Contact.subjects.keys %>
  </div>


  <div>
    <%= f.label :content, '内容*' %>
    <%= f.text_area :content, size: '10x10' %>
  </div>

  <div>
    <%= f.submit '送信' %>
  </div>
<% end %>