<div class="container my-5">
  <div class ="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @recipient, url: recipients_path, method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :organization_name %>
        <%= f.text_field :organization_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :organization_url %>
        <%= f.text_field :organization_url, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit '変更を保存' %>
      </div>
      <% end %>
    </div>
  </div>
</div>