<div>
  <% @favorites.each do |favorite| %>
    <% post = Post.find_by(id: favorite.post_id) %>
    <div>
      <%= post.updated_at.to_s(:day_jp) %>
    </div>
    <%= link_to post_path(post) do %>
      <div>
        <%= attachment_image_tag post, :post_image, :fill ,100 ,100 ,format: 'jpeg' %>
      </div>
      <div>
        <%= post.title %>
      </div>
    <% end %>
  <% end %>
</div>