<div>
<% @posts.each do |post| %>
</div>
<div>
<%= post.updated_at.to_s(:day_jp) %>
</div>
  <% if contributor_signed_in? && post.contributor_id == current_contributor.id %>
    <%= link_to contributor_post_path(post) do %>
      <div>
        <%= attachment_image_tag post, :post_image, :fill ,100 ,100 ,format: 'jpeg' %>
      </div>
      <div>
        <%= post.title %>
      </div>
    <% end %>
  <% else %>
    <%= link_to post_path(post) do %>
      <div>
        <%= attachment_image_tag post, :post_image, :fill ,100 ,100 ,format: 'jpeg' %>
      </div>
      <div>
        <%= post.title %>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>