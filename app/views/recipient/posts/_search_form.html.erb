<%= form_with(url: search_posts_path, method: :get, local: true) do |f| %>

  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title, placeholder: 'タイトル', value: params[:title] %>

  <%= f.label :prefecture, "都道府県" %>
  <%= f.select :prefecture, options_for_select(Post.prefectures), value: params[:prefecture] %>
  
  <%= f.label :genre,"ジャンル" %>
  <%= f.select :genre, options_for_select(Post.genres), value: params[:genre] %>
  <%= submit_tag '検索', class: "button" %>
<% end %>