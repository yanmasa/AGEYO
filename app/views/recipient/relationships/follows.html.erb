<div class="container mt-4">
  <div class ="row">
    <div class="col-lg-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>フォローユーザー一覧</h4>
      <% if @contributors.exists? %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>名前</th>
              <th></th>
              <th>団体名</th>
              <th></th>
            </tr>
          </thead>        
            <tbody>
              <% @contributors.each do |contributor| %>
                <% if contributor.is_active %>
                  <tr>
                    <td>
                      <%= link_to contributor_path(contributor) do %>
                        <%= contributor.nickname %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to contributor_path(contributor) do %>
                        <%= attachment_image_tag contributor, :profile_image, :fill ,100 ,100 ,format: 'jpeg',format: 'jpeg',fallback: "no-imageuser.png", size:'100x100' %>
                      <% end %>
                    </td>
                    <td>
                      <%= contributor.organization_name %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
        </table>
      <% else %>
        <p>フォローしているユーザはおりません。</p>
      <% end %>
    </div>
  </div>
</div>
